{{ attach_library('<%= themeNameMachine %>/card-list') }}

{% if section_title %}
    {%
      include '@<%= themeNameMachine %>/heading/heading.twig' with {
        "title": section_title,
        "heading_level": 2,
        "classes": "card-list__title"
      } only
    %}
{% endif %}

<ul class="card-list">
  {% block card_items %}
      {% for item in items %}
        <li class="card-list__item">
          {%
            include '@<%= themeNameMachine %>/card/card.twig' with {
              "card": item.card
            } only
          %}
        </li>
      {% endfor %}
  {% endblock %}
</ul>
